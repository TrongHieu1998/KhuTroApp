<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.activity_roommate.ActivityRoommate">
    <LinearLayout
        android:background="#EFAF50"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/img_backRoommate"
            android:layout_gravity="center"
            android:background="@drawable/custom_button_circle"
            android:src="@drawable/ic_back"
            android:layout_width="30dp"
            android:layout_height="30dp">
        </ImageView>
        <TextView
            android:textColor="#333232"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:text="BẠN CÙNG PHÒNG"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        </TextView>
    </LinearLayout>

    <ListView
        android:id="@+id/listviewRoommate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>